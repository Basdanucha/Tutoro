<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:padding="@dimen/_4sdp"
    android:id="@+id/constraint_root"
    android:background="@color/background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_img_user"
        android:layout_width="97dp"
        android:layout_height="93dp"
        android:src="@drawable/no_user_image"
        app:civ_border_color="@color/hintTextColor"
        app:civ_border_width="@dimen/_1sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="248dp"
        android:layout_height="29dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/magilio"
        android:maxLength="28"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_img_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/circle_img_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="177dp"
        android:layout_height="25dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/magilio"
        android:maxLength="28"
        android:textColor="@color/text_color"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_img_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/circle_img_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541" />

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="174dp"
        android:layout_height="26dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/magilio"
        android:maxLength="28"
        android:textColor="@color/text_color"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_img_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/circle_img_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88" />

</androidx.constraintlayout.widget.ConstraintLayout>